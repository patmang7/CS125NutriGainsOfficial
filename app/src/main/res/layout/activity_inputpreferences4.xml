<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Input Your Preferences"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="100dp"
        android:text="Enter a min and max value for the amount of calories you would like in recipe."
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="197dp"
        android:layout_marginBottom="100dp"
        android:text="Enter a min and max value for the amount of carbs you would like to see in a recipe."
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="349dp"
        android:layout_marginBottom="100dp"
        android:text="Enter a min and max value for the amount of sugar you would like to see in a recipe."
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/min_calories"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="117dp"
        android:hint="Min" />

    <EditText
        android:id="@+id/min_sugar"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="413dp"
        android:hint="Min" />

    <EditText
        android:id="@+id/min_carbs"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="261dp"
        android:hint="Min" />

    <EditText
        android:id="@+id/max_calories"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="123dp"
        android:layout_marginRight="113dp"
        android:hint="Max" />

    <EditText
        android:id="@+id/max_carbs"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="264dp"
        android:layout_marginRight="113dp"
        android:hint="Max" />

    <EditText
        android:id="@+id/max_sugar"
        android:layout_width="61dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="412dp"
        android:layout_marginRight="112dp"
        android:hint="Max" />

    <Button
        android:id="@+id/next_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="49dp"
        android:text="Next" />

</RelativeLayout>
